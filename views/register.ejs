<!DOCTYPE html>

<head>
  <%- include partials/htmlhead %>
</head>

<body class="text-center bg-light">
  <div class="container register-container">
    <div class="container">
      <h1 class="h3 mb-3 font-weight-normal"><i class="fas fa-search-dollar"></i>&nbsp;Register</h1>
      <!-- Register Panel Body-->
      <form class="form-register" method="post" action="reg_user">
        <div class="modal-body">
          <div class="form-group mb-3">
            <div class="form-row">
              <div class="col-md-6">
                <input type="text" id="firstName" class="form-control" placeholder="First name" required autofocus
                  name="firstname">
              </div>
              <div class="col-md-6">
                <input type="text" id="lastName" class="form-control" placeholder="Last name" required autofocus
                  name="lastname">
              </div>
            </div>
          </div>

          <div class="form-group mb-3">
            <div class="form-row">
              <div class="col-md-6">
                <select class="form-control" required autofocus name="gender">
                  <option>Male</option>
                  <option>Female</option>
                </select>
              </div>
              <div class="col-md-6">
                <input class="form-control" type="date" value="1990-08-19" required name="birthdate">
              </div>
            </div>
          </div>

          <div class="form-group">
            <input type="email" id="modalLRInput12" class="form-control validate" placeholder="Email address" required
              autofocus name="username">
          </div>

          <div class="form-group">
            <input type="password" id="modalLRInput13" class="form-control validate" placeholder="Password" required
              autofocus name="password">
          </div>

          <div class="text-center form-sm mt-2">
            <button type="submit" class="btn btn-info">Sign up</button>
          </div>

          <% if(regFail) { %>
            <br />
            <div class="container">
              <p class="font-weight-light text-danger">
                Username already registered. Please try a different username.
              </p>
            </div>
          <% } %>
        </div>
      </form>
    </div>
  </div>

  <footer>
    <%- include partials/footer %>
  </footer>

  <%- include partials/htmlscripts %>

</body>

</html>